{% extends 'base.html.twig' %}
{% block title %}Articles{% endblock %}

{% block body %}
 

  
  
            <div class="overflow-x-auto">
                <h1>Liste des articles</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Contenu</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                            <tr>
                              
                                <td>{{ article.idUser.email }}</td>
                                <td>{{ article.nom }}</td>
                                <td>{{ article.description }}</td>
                               
                                <td>
                                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">Voir</a>
                                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-secondary">Modifier</a>
                                    <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
   
         

                <a href="{{ path('article_new') }}" class="btn btn-primary">Ajouter un article</a>
                <a href="{{ path('app_main') }}" class="btn btn-primary">Retour</a>
            
        
   
{% endblock %}