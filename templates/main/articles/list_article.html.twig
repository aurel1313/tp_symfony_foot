{% extends 'base.html.twig' %}

{% block listArticle %}
    <div >
        {{ dump(app.request.get('_route')) }}
        <h1 class="text-center"> {{ app.request.get('_route') == "modifier_article" ? "Modifier" : "Ajouter" }}</h1>
        {{ form_start(form) }}
        <div class="flex flex-col items-center h-screen justify-center ">
            <div class="">
                {{ form_row(form.nom,{
                    'attr':{
                        'class':'input input-bordered ml-5'
                    }
                }) }}
            </div>
            <div>
                {{ form_row(form.description,{
                    'attr':{
                        'class':'input input-bordered ml-5'
                    }
                }) }}
            </div>
            <div>
                {{ form_row(form.images,{
                    'attr':{
                        'class':'input input-bordered ml-5'
                    }
                }) }}
            </div>
            <button type="Submit" class="btn bg-green-500">Ajouter</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}